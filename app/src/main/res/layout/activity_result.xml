<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F0F0F0">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent">

        <soup.neumorphism.NeumorphFloatingActionButton
            style="@style/ShapeAppearance.Neumorph.FloatingActionButton"
            android:layout_width="240dp"
            android:layout_height="240dp"
            app:neumorph_backgroundColor="#F0F0F0"
            app:neumorph_shadowColorLight="#F8F8F8"
            app:neumorph_shapeType="pressed"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="70dp">
        </soup.neumorphism.NeumorphFloatingActionButton>


        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="75dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:indeterminateOnly="false"
            android:textAlignment="center"
            android:progress="100"
            android:progressDrawable="@drawable/circle"/>



        <soup.neumorphism.NeumorphFloatingActionButton
            style="@style/ShapeAppearance.Neumorph.FloatingActionButton"
            android:layout_width="185dp"
            android:layout_height="185dp"
            android:layout_marginStart="53dp"
            android:layout_marginTop="95dp"
            app:neumorph_backgroundColor="#F0F0F0"
            app:neumorph_shadowColorLight="#F8F8F8"
            app:neumorph_shapeType="flat"/>

        <soup.neumorphism.NeumorphTextView
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="BMI"
            android:textSize="30dp"
            android:fontFamily="@font/avebold"
            android:textColor="#6F3132"
            android:layout_marginTop="120dp"
            android:layout_marginStart="113dp"/>

        <soup.neumorphism.NeumorphTextView
            android:id="@+id/jmlbmi"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_marginTop="165dp"
            android:layout_marginStart="95dp"
            android:textSize="60dp"
            android:text="58,0"
            android:textColor="@color/black"
            android:fontFamily="@font/digital"/>

    </RelativeLayout>

    <GridLayout
        android:layout_width="310dp"
        android:layout_height="300dp"
        android:layout_marginTop="-340dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp">

        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="900dp"
            android:layout_marginEnd="80dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/wotah"
                android:layout_margin="38dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="water"
                android:fontFamily="@font/heavy"
                android:textColor="#4A2D2C"
                android:layout_marginStart="43dp"
                android:layout_marginTop="13dp"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="60.2"
                android:fontFamily="@font/digital"
                android:textSize="30dp"
                android:textColor="#4A2D2C"
                android:layout_marginStart="40dp"
                android:layout_marginTop="86dp"/>
        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="900dp"
            android:layout_marginStart="-77dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/othot"
                android:layout_margin="38dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="muscle masst"
                android:fontFamily="@font/heavy"
                android:textColor="#4A2D2C"
                android:layout_marginStart="18dp"
                android:layout_marginTop="13dp"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="82.5"
                android:fontFamily="@font/digital"
                android:textSize="30dp"
                android:textColor="#4A2D2C"
                android:layout_marginStart="40dp"
                android:layout_marginTop="86dp"/>

        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="150dp"
            android:layout_marginStart="-300dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/vf"
                android:layout_margin="38dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="visceral fat"
                android:fontFamily="@font/heavy"
                android:textColor="#4A2D2C"
                android:layout_marginStart="28dp"
                android:layout_marginTop="13dp"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:fontFamily="@font/digital"
                android:textSize="30dp"
                android:textColor="#4A2D2C"
                android:layout_marginStart="60dp"
                android:layout_marginTop="86dp"/>
        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="150dp"
            android:layout_marginStart="0dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/lemax"
                android:layout_margin="38dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="fat"
                android:fontFamily="@font/heavy"
                android:textColor="#4A2D2C"
                android:layout_marginStart="53dp"
                android:layout_marginTop="13dp"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15.8"
                android:fontFamily="@font/digital"
                android:textSize="30dp"
                android:textColor="#4A2D2C"
                android:layout_marginStart="40dp"
                android:layout_marginTop="86dp"/>
        </soup.neumorphism.NeumorphCardView>

    </GridLayout>








</LinearLayout>